<!-- tiles-defs.xml -->
<tiles-definitions>
	<!-- project3 -->
	<definition name="">
	</definition>

   <!-- <definition>태그 하나당 화면 한개를 정의 -->   
   <definition name=".main" path="/common/base.jsp">
   
     <!-- path속성에 정의된 base.jsp에서 include할 페이지들에 대한 정의 -->
      <put name="header" value="/common/header.jsp"></put>
      <put name="menu" value="/common/menu.jsp"></put>
      <put name="footer" value="/common/footer.jsp"></put>
      
   </definition>
   
   <definition name=".form" extends=".main">
      <put name="body" value="/guest/inputForm.jsp"/>
   </definition>
   
   <definition name=".login" extends=".main">
      <put name="body" value="/0723/login_form.jsp"></put>
   </definition>
   
  <!-- 이성훈 mypage tiles 설정 시작  -->
  
   <definition name=".mypage" path="/mypage/view/mypage_base.jsp">
   	  <put name="h" value="/common/header.jsp"/>
   	  <put name="s" value="/common/search.jsp"/>
   	  <put name="menu" value="/common/menu.jsp"/>
   	  <put name="sidemenu" value="/mypage/result/sidemenu.jsp"/>
   	  <put name="b" value="/mypage/result/basic.jsp"/>
   	  <put name="f" value="/common/footer.jsp"/>
   </definition>
    
   <definition name=".modify" extends=".mypage">
   	  <put name="b" value="/mypage/view/modify.jsp"></put>
   </definition>
   
   <definition name=".cash" extends=".mypage">
      <put name="b" value="/mypage/result/addcash.jsp"></put>
   </definition>
   
   <definition name=".assign" extends=".mypage">
   	  <put name="b" value="/mypage/result/assign.jsp"/>
   </definition>
   <definition name=".drop" extends=".mypage">
   	  <put name="b" value="/mypage/result/drop.jsp"/>
   </definition>
   
   <!-- 이성훈 mypage tiles 설정 종료  -->
   
</tiles-definitions>


